<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="@drawable/img"
        android:text="play"
        android:textColor="#492b06"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="#b4171d"
        android:shadowColor="#000000"
        android:text="Match the Shape"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"
        android:textAlignment="center"
        android:textSize="22sp"
        android:padding="30dp"
        android:background="#ed1c24"
        android:text="How To Play: A image will be shown on the screen and you have to identify wheather the next image that appears matches with the previous one or not within the given time limit."/>

</LinearLayout>